      <script>System.out.println("Starting OCN Workflow");</script>
    </scriptTask>
    <scriptTask id="ScriptTask_2" name="Load Data from OCN DB" scriptFormat="http://www.java.com/java" >
      <script>OCNDataLoader loader = new OCNDataLoader();
HashMap &lt;String, byte[]&gt; data = new HashMap &lt;String, byte[]&gt;();
String issue = (String)issuekey;

System.out.println("1. Load Data");
try {
	JiraEndpoint.changeStatus(issue, "Ready for Pangaea-Import");
	
	data = loader.getData((String) legid, 0);
	
	for(String s : (LinkedList&lt;String&gt;)ByteRay.getJiraComments(data)){
		JiraEndpoint.addIssueComment(issue, s);
	} 

	for(Entry &lt;String, byte[]&gt; e : ((HashMap&lt;String, byte[]&gt;) ByteRay.getJiraAttachments(data)).entrySet()){
		JiraEndpoint.addAttachment(issue, e.getValue(), e.getKey(), "");
	} 

} catch (Exception e) {
			// TODO Auto-generated catch block
			JiraEndpoint.changeStatus(issue, "Data Needs Correction");
			e.printStackTrace();
			JiraEndpoint.addIssueComment(issue, e.getMessage());
}finally{
	data = ByteRay.flushData(data);		
}

kcontext.setVariable("tempResult", data);
System.out.println("1. Load Data done");</script>
    </scriptTask>
    <scriptTask id="ScriptTask_3" name="Mapping OCN to Pangaea" scriptFormat="http://www.java.com/java" >
      <script>System.out.println("2. Mapping");
OCNToPangaeaMapper mapper = new OCNToPangaeaMapper();
HashMap&lt;String, byte[]&gt; result = new HashMap&lt;String, byte[]&gt;();
String issue = (String)issuekey;

try {
	result = mapper.replaceArtefacts((HashMap&lt;String, byte[]&gt;)tempResult, 0);
	
	for(String s : (LinkedList&lt;String&gt;)ByteRay.getJiraComments(result)){
		JiraEndpoint.addIssueComment(issue, s);
	} 

	for(Entry &lt;String, byte[]&gt; e : ((HashMap&lt;String, byte[]&gt;)ByteRay.getJiraAttachments(result)).entrySet()){
		JiraEndpoint.addAttachment(issue, e.getValue(), e.getKey(), "");
	} 

} catch (Exception e) {
			// TODO Auto-generated catch block
			JiraEndpoint.changeStatus(issue, "Data Needs Correction");
			e.printStackTrace();
			JiraEndpoint.addIssueComment(issue, e.getMessage());
}finally{
	result = ByteRay.flushData(result);		
}

kcontext.setVariable("tempResult", result);
System.out.println("2. Mapping done");</script>
    </scriptTask>
    <scriptTask id="ScriptTask_4" name="Communicate Result" scriptFormat="http://www.java.com/java" >
      <script>FileCreator4D fc4d = new FileCreator4D();

System.out.println("3. FileWriter");
String issue = (String)issuekey;

try {
	HashMap&lt;String, byte[]&gt; tResult = fc4d.toCSV((HashMap&lt;String, byte[]&gt;)tempResult, (String) pid, (String) login, (String) source, (String) author, (String) project, (String) topology, (String) status, (String) zielpfad, (String) reference, (String) filename, (String) legcomment, 0);
	
	for(String s : (LinkedList&lt;String&gt;)ByteRay.getJiraComments(tResult)){
		JiraEndpoint.addIssueComment(issue, s);
	} 
	
	for(Entry &lt;String, byte[]&gt; e : ((HashMap&lt;String, byte[]&gt;)ByteRay.getJiraAttachments(tResult)).entrySet()){
		JiraEndpoint.addAttachment(issue, e.getValue(), e.getKey(), "");
	} 
	
	try {
			Thread.sleep(60000);
		} catch (InterruptedException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
	JiraEndpoint.changeStatus(issue, "Waiting For DOI");
	
} catch (Exception e) {
	JiraEndpoint.changeStatus(issue, "Data Needs Correction");
	e.printStackTrace();
	JiraEndpoint.addIssueComment(issue, e.getMessage());
}

System.out.println("FileWriter done");</script>
    </scriptTask>

